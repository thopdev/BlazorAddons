{
  "name": "blazoraddons",
  "displayName": "Blazor Addons",
  "description": "An addon for visual studio code that helps improve the workflow for blazor.",
  "version": "0.3.0",
  "publisher": "tHop",
  "type": "git",
  "icon": "resources/images/Blazor.png",
  "repository": "https://github.com/hopstar/BlazorAddons",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:blazorcomponents.createComponent"
  ],
  "contributes": {
    "commands": [
      {
        "command": "blazorcomponents.createComponent",
        "title": "Create Blazor Component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "blazorcomponents.createComponent",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "glob": "^7.1.4",
    "mocha": "^10.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  }
}
